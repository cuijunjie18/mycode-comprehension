{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++.exe build active file",//这个标签很重要,要对应Launch
        "command": "E:\\CodeBlocks\\MinGW\\bin\\g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-std=c++11",//可以选择编译器版本
          "-g",
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ],
    "version": "2.0.0"
  }